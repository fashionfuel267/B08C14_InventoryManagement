@model IEnumerable<B08C14_InventoryManagement.Data.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Name)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            <tr>
                <td colspan="5">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <td>
                                    Product
                                </td>
                                <td>
                                    Quantity
                                </td>
                                <td>
                                    Price
                                </td>
                                <td>
                                    Total Price
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in item.OrderDetails)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => d.Product.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => d.Quantity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => d.UnitPrice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => d.TotalPrice)
                                    </td>

                                    <td>
                                        <a asp-action="Edit" asp-route-id="@d.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@d.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@d.Id">Delete</a>
                                    </td>
                                </tr>}

                    </tbody>
                </table>
            </td>
        </tr>
}
    </tbody>
</table>
